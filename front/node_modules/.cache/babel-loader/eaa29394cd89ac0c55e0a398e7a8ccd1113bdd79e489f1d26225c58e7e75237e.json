{"ast":null,"code":"import \"core-js/modules/es.array.push.js\";\nimport \"core-js/modules/es.array-buffer.detached.js\";\nimport \"core-js/modules/es.array-buffer.transfer.js\";\nimport \"core-js/modules/es.array-buffer.transfer-to-fixed-length.js\";\nimport \"core-js/modules/es.iterator.constructor.js\";\nimport \"core-js/modules/es.iterator.find.js\";\nimport \"core-js/modules/es.iterator.map.js\";\nimport \"core-js/modules/es.typed-array.with.js\";\nimport \"core-js/modules/esnext.json.parse.js\";\nimport \"core-js/modules/esnext.uint8-array.set-from-base64.js\";\nimport \"core-js/modules/esnext.uint8-array.set-from-hex.js\";\nimport \"core-js/modules/esnext.uint8-array.to-base64.js\";\nimport \"core-js/modules/esnext.uint8-array.to-hex.js\";\nimport \"core-js/modules/web.dom-exception.stack.js\";\nimport \"core-js/modules/web.url-search-params.delete.js\";\nimport \"core-js/modules/web.url-search-params.has.js\";\nimport \"core-js/modules/web.url-search-params.size.js\";\nimport { ref, computed, onMounted, onBeforeUnmount } from 'vue';\nimport { useRouter, useRoute } from 'vue-router';\nexport default {\n  __name: 'Video',\n  setup(__props, {\n    expose: __expose\n  }) {\n    __expose();\n    const router = useRouter();\n    const route = useRoute();\n\n    // ËßÜÈ¢ëÊ∫êÂú∞ÂùÄ\n    const videoSrc = ref('https://www.w3schools.com/html/mov_bbb.mp4');\n    // ËßÜÈ¢ë‰ø°ÊÅØ\n    const videoInfo = ref(null);\n    // Áî®‰∫éÂ≠òÂÇ®ÂàõÂª∫ÁöÑblob URLÔºå‰ª•‰æøÊ∏ÖÁêÜ\n    let blobUrl = null;\n\n    // ËØÑËÆ∫Êï∞ÊçÆÁ§∫‰æã\n    const comments = ref([{\n      id: 1,\n      user: 'Alice',\n      content: 'Â§™Ê£í‰∫ÜÔºÅ',\n      time: '2025-11-23T17:00:00',\n      hot: 10\n    }, {\n      id: 2,\n      user: 'Bob',\n      content: 'ÈùûÂ∏∏ÂñúÊ¨¢ÔºÅ',\n      time: '2025-11-23T17:05:00',\n      hot: 15\n    }, {\n      id: 3,\n      user: 'Charlie',\n      content: 'Â≠¶‰π†‰∫Ü',\n      time: '2025-11-23T17:10:00',\n      hot: 8\n    }]);\n\n    // ËØÑËÆ∫ÊéíÂ∫èÊñπÂºè\n    const sortOrder = ref('time');\n\n    // Ê†πÊçÆÈÄâÊã©ÊéíÂ∫èËØÑËÆ∫\n    const sortedComments = computed(() => {\n      return [...comments.value].sort((a, b) => {\n        if (sortOrder.value === 'time') {\n          return new Date(b.time) - new Date(a.time);\n        } else if (sortOrder.value === 'hot') {\n          return b.hot - a.hot;\n        }\n        return 0;\n      });\n    });\n\n    // Âä†ËΩΩËßÜÈ¢ë\n    const loadVideo = () => {\n      // ÂÖàÊ£ÄÊü•ÊòØÂê¶‰ªé‰∏ªÈ°µ‰º†Êù•‰∫ÜËßÜÈ¢ëÊ∫ê\n      const videoSrc_query = route.query.src;\n      if (videoSrc_query) {\n        videoSrc.value = videoSrc_query;\n        // ‰ªéqueryËé∑ÂèñËßÜÈ¢ë‰ø°ÊÅØ\n        const videoId = route.query.id;\n        if (videoId) {\n          // Â¶ÇÊûúÈúÄË¶ÅÔºåÂèØ‰ª•‰ªésessionStorageÊàñÂÖ∂‰ªñÊñπÂºèËé∑ÂèñËßÜÈ¢ëËØ¶ÁªÜ‰ø°ÊÅØ\n          videoInfo.value = {\n            id: videoId,\n            title: `ËßÜÈ¢ë ${videoId}`,\n            creator: 'VirtuaLive',\n            views: 'ÁÇπÂáªÊí≠Êîæ',\n            duration: 'Âä®ÊÄÅÂä†ËΩΩ'\n          };\n        }\n        return;\n      }\n\n      // ‰ªéË∑ØÁî±ÂèÇÊï∞Ëé∑ÂèñËßÜÈ¢ëID\n      const videoId = route.query.id;\n      if (videoId) {\n        try {\n          // ‰ªélocalStorageÂä†ËΩΩÁî®Êà∑‰ΩúÂìÅ\n          const userWorks = localStorage.getItem('userWorks');\n          if (userWorks) {\n            const works = JSON.parse(userWorks);\n            const video = works.find(w => w.id === Number(videoId));\n            if (video) {\n              videoInfo.value = video;\n\n              // ‰ºòÂÖà‰ªésessionStorageËØªÂèñblob URL\n              const blobUrl = sessionStorage.getItem(`videoBlob_${videoId}`);\n              if (blobUrl) {\n                videoSrc.value = blobUrl;\n                return;\n              }\n\n              // Â¶ÇÊûúËßÜÈ¢ëÊúâbase64Êï∞ÊçÆÔºåÂàõÂª∫blob URL\n              if (video.videoData) {\n                // Â∞Übase64Êï∞ÊçÆËΩ¨Êç¢‰∏∫blob URL\n                // videoDataÊòØdata:video/mp4;base64,xxxxxÊ†ºÂºè\n                if (video.videoData.startsWith('data:')) {\n                  videoSrc.value = video.videoData;\n                } else {\n                  // Â¶ÇÊûú‰∏çÊòØdata URLÊ†ºÂºèÔºåÂ∞ùËØïÂàõÂª∫blob\n                  const byteCharacters = atob(video.videoData);\n                  const byteNumbers = new Array(byteCharacters.length);\n                  for (let i = 0; i < byteCharacters.length; i++) {\n                    byteNumbers[i] = byteCharacters.charCodeAt(i);\n                  }\n                  const byteArray = new Uint8Array(byteNumbers);\n                  const blob = new Blob([byteArray], {\n                    type: video.fileType || 'video/mp4'\n                  });\n                  blobUrl = URL.createObjectURL(blob);\n                  videoSrc.value = blobUrl;\n                }\n                return;\n              }\n            }\n          }\n        } catch (err) {\n          console.error('Âä†ËΩΩËßÜÈ¢ëÂ§±Ë¥•:', err);\n        }\n      }\n\n      // Â¶ÇÊûúÊ≤°ÊúâÊâæÂà∞ËßÜÈ¢ëÊàñÊ≤°ÊúâIDÔºå‰ΩøÁî®ÈªòËÆ§ËßÜÈ¢ë\n      videoSrc.value = 'https://www.w3schools.com/html/mov_bbb.mp4';\n    };\n\n    // ËøîÂõûÊåâÈíÆÈÄªËæë\n    const goBack = () => {\n      router.back();\n    };\n\n    // ÁªÑ‰ª∂ÊåÇËΩΩÊó∂Âä†ËΩΩËßÜÈ¢ë\n    onMounted(() => {\n      loadVideo();\n    });\n\n    // ÁªÑ‰ª∂Âç∏ËΩΩÂâçÊ∏ÖÁêÜblob URL\n    onBeforeUnmount(() => {\n      if (blobUrl) {\n        URL.revokeObjectURL(blobUrl);\n        blobUrl = null;\n      }\n    });\n\n    // Êñ∞Â¢ûÁä∂ÊÄÅ\n    const newComment = ref(\"\");\n    const replyingTo = ref(null);\n    const replyText = ref(\"\");\n    const lastScrollY = ref(0);\n\n    // ÁªôÊØè‰∏™ËØÑËÆ∫Âä†ÔºöÁÇπËµûÊï∞„ÄÅÂõûÂ§çÂàóË°®\n    comments.value = comments.value.map(c => ({\n      ...c,\n      likes: c.hot || 0,\n      replies: []\n    }));\n    const toggleLike = comment => {\n      if (!comment.liked) {\n        comment.likes++;\n        comment.liked = true;\n      } else {\n        comment.likes--;\n        comment.liked = false;\n      }\n    };\n    comments.value = comments.value.map(c => ({\n      ...c,\n      likes: c.hot || 0,\n      liked: false,\n      replies: []\n    }));\n\n    // ÂèëÂ∏ÉËØÑËÆ∫\n    const postComment = () => {\n      if (!newComment.value.trim()) return;\n      comments.value.unshift({\n        id: Date.now(),\n        user: \"You\",\n        content: newComment.value,\n        time: new Date().toISOString(),\n        likes: 0,\n        replies: []\n      });\n      newComment.value = \"\";\n    };\n\n    // Â±ïÂºÄ/ÂÖ≥Èó≠ÂõûÂ§çÊ°Ü\n    const toggleReplyBox = comment => {\n      if (replyingTo.value === comment.id) {\n        replyingTo.value = null;\n      } else {\n        replyingTo.value = comment.id;\n        replyText.value = \"\";\n      }\n    };\n\n    // ÂèëÈÄÅÂõûÂ§ç\n    const submitReply = comment => {\n      if (!replyText.value.trim()) return;\n      comment.replies.push({\n        id: Date.now(),\n        user: \"You\",\n        content: replyText.value,\n        time: new Date().toISOString()\n      });\n      replyText.value = \"\";\n      replyingTo.value = null;\n    };\n\n    // ÂõûÂà∞È°∂ÈÉ®ÊåâÈíÆÈÄªËæë\n    const handleBackTop = () => {\n      const now = window.scrollY;\n\n      // ÁÇπÂáªÂêéÂõûÂà∞È°∂ÈÉ®\n      if (now > 50) {\n        lastScrollY.value = now;\n        window.scrollTo({\n          top: 0,\n          behavior: \"smooth\"\n        });\n      } else {\n        // ÂÜçÊ¨°ÁÇπÂáª ‚Üí ÂõûÂà∞‰πãÂâçÁöÑ‰ΩçÁΩÆ\n        window.scrollTo({\n          top: lastScrollY.value,\n          behavior: \"smooth\"\n        });\n      }\n    };\n    const __returned__ = {\n      router,\n      route,\n      videoSrc,\n      videoInfo,\n      get blobUrl() {\n        return blobUrl;\n      },\n      set blobUrl(v) {\n        blobUrl = v;\n      },\n      comments,\n      sortOrder,\n      sortedComments,\n      loadVideo,\n      goBack,\n      newComment,\n      replyingTo,\n      replyText,\n      lastScrollY,\n      toggleLike,\n      postComment,\n      toggleReplyBox,\n      submitReply,\n      handleBackTop,\n      ref,\n      computed,\n      onMounted,\n      onBeforeUnmount,\n      get useRouter() {\n        return useRouter;\n      },\n      get useRoute() {\n        return useRoute;\n      }\n    };\n    Object.defineProperty(__returned__, '__isScriptSetup', {\n      enumerable: false,\n      value: true\n    });\n    return __returned__;\n  }\n};","map":{"version":3,"names":["ref","computed","onMounted","onBeforeUnmount","useRouter","useRoute","router","route","videoSrc","videoInfo","blobUrl","comments","id","user","content","time","hot","sortOrder","sortedComments","value","sort","a","b","Date","loadVideo","videoSrc_query","query","src","videoId","title","creator","views","duration","userWorks","localStorage","getItem","works","JSON","parse","video","find","w","Number","sessionStorage","videoData","startsWith","byteCharacters","atob","byteNumbers","Array","length","i","charCodeAt","byteArray","Uint8Array","blob","Blob","type","fileType","URL","createObjectURL","err","console","error","goBack","back","revokeObjectURL","newComment","replyingTo","replyText","lastScrollY","map","c","likes","replies","toggleLike","comment","liked","postComment","trim","unshift","now","toISOString","toggleReplyBox","submitReply","push","handleBackTop","window","scrollY","scrollTo","top","behavior"],"sources":["C:/Users/13765/Desktop/vitualieve/front/Virtual-Live/front/src/components/video/Video.vue"],"sourcesContent":["<template>\r\n  <div class=\"video-detail-page\">\r\n    <!-- ËøîÂõûÊåâÈíÆ -->\r\n    <button class=\"back-btn\" @click=\"goBack\">‚Üê ËøîÂõû</button>\r\n\r\n    <!-- ËßÜÈ¢ë‰ø°ÊÅØ -->\r\n    <div v-if=\"videoInfo\" class=\"video-info\">\r\n      <h2 class=\"video-title\">{{ videoInfo.title }}</h2>\r\n      <p class=\"video-creator\">@{{ videoInfo.creator }}</p>\r\n      <p class=\"video-stats\">{{ videoInfo.views }} ¬∑ {{ videoInfo.duration }}</p>\r\n    </div>\r\n\r\n    <!-- ËßÜÈ¢ëÊí≠ÊîæÂå∫Âüü -->\r\n    <div class=\"video-wrapper\">\r\n      <video ref=\"videoRef\" :src=\"videoSrc\" controls autoplay></video>\r\n    </div>\r\n\r\n    <!-- ËØÑËÆ∫Âå∫ -->\r\n    <!-- ËØÑËÆ∫Âå∫ -->\r\n    <div class=\"comments-section\">\r\n\r\n      <!-- È°∂ÈÉ®ËØÑËÆ∫ËæìÂÖ• -->\r\n      <div class=\"comment-input-box\">\r\n        <textarea v-model=\"newComment\" placeholder=\"ÂèëË°®‰Ω†ÁöÑÁúãÊ≥ï‚Ä¶\"></textarea>\r\n        <button @click=\"postComment\">ÂèëË°®ËØÑËÆ∫</button>\r\n      </div>\r\n\r\n      <!-- ÊéíÂ∫è -->\r\n      <div class=\"comments-header\">\r\n        <h3>ËØÑËÆ∫</h3>\r\n        <select v-model=\"sortOrder\">\r\n          <option value=\"time\">ÊåâÊó∂Èó¥</option>\r\n          <option value=\"hot\">ÊåâÁÉ≠Â∫¶</option>\r\n        </select>\r\n      </div>\r\n\r\n      <!-- ËØÑËÆ∫ÂàóË°® -->\r\n      <ul class=\"comments-list\">\r\n        <li v-for=\"comment in sortedComments\" :key=\"comment.id\">\r\n\r\n          <strong>{{ comment.user }}:</strong> {{ comment.content }}\r\n\r\n          <!-- ËØÑËÆ∫Êìç‰ΩúÊåâÈíÆ -->\r\n          <div class=\"comment-actions\">\r\n            <span class=\"like-btn\" :class=\"{ liked: comment.liked }\" @click=\"toggleLike(comment)\">\r\n              ‚ù§Ô∏è {{ comment.likes }}\r\n            </span>\r\n            <span @click=\"toggleReplyBox(comment)\">üí¨ ÂõûÂ§ç</span>\r\n          </div>\r\n\r\n          <!-- ÂõûÂ§çËæìÂÖ•Ê°Ü -->\r\n          <div v-if=\"replyingTo === comment.id\" class=\"reply-box\">\r\n            <textarea v-model=\"replyText\" placeholder=\"ÂõûÂ§çÂÜÖÂÆπ‚Ä¶\"></textarea>\r\n            <button @click=\"submitReply(comment)\">ÂèëÈÄÅ</button>\r\n          </div>\r\n\r\n          <!-- ÂõûÂ§çÂàóË°® -->\r\n          <ul class=\"reply-list\" v-if=\"comment.replies.length > 0\">\r\n            <li v-for=\"reply in comment.replies\" :key=\"reply.id\" class=\"reply-item\">\r\n              <strong>{{ reply.user }}:</strong> {{ reply.content }}\r\n            </li>\r\n          </ul>\r\n\r\n        </li>\r\n      </ul>\r\n    </div>\r\n\r\n    <!-- ÂõûÂà∞È°∂ÈÉ®ÊåâÈíÆ -->\r\n    <button class=\"back-top-btn\" @click=\"handleBackTop\">\r\n      ‚¨Ü\r\n    </button>\r\n\r\n  </div>\r\n</template>\r\n\r\n<script setup>\r\nimport { ref, computed, onMounted, onBeforeUnmount } from 'vue'\r\nimport { useRouter, useRoute } from 'vue-router'\r\n\r\nconst router = useRouter()\r\nconst route = useRoute()\r\n\r\n// ËßÜÈ¢ëÊ∫êÂú∞ÂùÄ\r\nconst videoSrc = ref('https://www.w3schools.com/html/mov_bbb.mp4')\r\n// ËßÜÈ¢ë‰ø°ÊÅØ\r\nconst videoInfo = ref(null)\r\n// Áî®‰∫éÂ≠òÂÇ®ÂàõÂª∫ÁöÑblob URLÔºå‰ª•‰æøÊ∏ÖÁêÜ\r\nlet blobUrl = null\r\n\r\n// ËØÑËÆ∫Êï∞ÊçÆÁ§∫‰æã\r\nconst comments = ref([\r\n  { id: 1, user: 'Alice', content: 'Â§™Ê£í‰∫ÜÔºÅ', time: '2025-11-23T17:00:00', hot: 10 },\r\n  { id: 2, user: 'Bob', content: 'ÈùûÂ∏∏ÂñúÊ¨¢ÔºÅ', time: '2025-11-23T17:05:00', hot: 15 },\r\n  { id: 3, user: 'Charlie', content: 'Â≠¶‰π†‰∫Ü', time: '2025-11-23T17:10:00', hot: 8 }\r\n])\r\n\r\n// ËØÑËÆ∫ÊéíÂ∫èÊñπÂºè\r\nconst sortOrder = ref('time')\r\n\r\n// Ê†πÊçÆÈÄâÊã©ÊéíÂ∫èËØÑËÆ∫\r\nconst sortedComments = computed(() => {\r\n  return [...comments.value].sort((a, b) => {\r\n    if (sortOrder.value === 'time') {\r\n      return new Date(b.time) - new Date(a.time)\r\n    } else if (sortOrder.value === 'hot') {\r\n      return b.hot - a.hot\r\n    }\r\n    return 0\r\n  })\r\n})\r\n\r\n// Âä†ËΩΩËßÜÈ¢ë\r\nconst loadVideo = () => {\r\n  // ÂÖàÊ£ÄÊü•ÊòØÂê¶‰ªé‰∏ªÈ°µ‰º†Êù•‰∫ÜËßÜÈ¢ëÊ∫ê\r\n  const videoSrc_query = route.query.src\r\n  if (videoSrc_query) {\r\n    videoSrc.value = videoSrc_query\r\n    // ‰ªéqueryËé∑ÂèñËßÜÈ¢ë‰ø°ÊÅØ\r\n    const videoId = route.query.id\r\n    if (videoId) {\r\n      // Â¶ÇÊûúÈúÄË¶ÅÔºåÂèØ‰ª•‰ªésessionStorageÊàñÂÖ∂‰ªñÊñπÂºèËé∑ÂèñËßÜÈ¢ëËØ¶ÁªÜ‰ø°ÊÅØ\r\n      videoInfo.value = {\r\n        id: videoId,\r\n        title: `ËßÜÈ¢ë ${videoId}`,\r\n        creator: 'VirtuaLive',\r\n        views: 'ÁÇπÂáªÊí≠Êîæ',\r\n        duration: 'Âä®ÊÄÅÂä†ËΩΩ'\r\n      }\r\n    }\r\n    return\r\n  }\r\n\r\n  // ‰ªéË∑ØÁî±ÂèÇÊï∞Ëé∑ÂèñË