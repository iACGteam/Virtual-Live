ner\" @mousemove=\"onMouseMove\">\r\n    <!-- È°∂ÈÉ®ÊÇ¨ÊµÆËß¶ÂèëÂå∫‰∏éÊéíË°åÊ¶ú -->\r\n    <div class=\"chat-top\" ref=\"chatTop\">\r\n      <div class=\"room-title\">\r\n        ËÅäÂ§©Âå∫\r\n        <span class=\"online\">Âú®Á∫ø {{ fakeOnline }}</span>\r\n      </div>\r\n\r\n      <!-- Á§ºÁâ©Ê¶ú -->\r\n      <div\r\n        class=\"gift-leaderboard\"\r\n        v-show=\"showLeaderboard\"\r\n        @mouseenter=\"keepLeaderboard = true\"\r\n        @mouseleave=\"keepLeaderboard = false\"\r\n      >\r\n        <div class=\"lb-title\">ÈÄÅÁ§ºÊéíË°åÊ¶ú</div>\r\n        <ol>\r\n          <li v-for=\"(u, idx) in leaderboard\" :key=\"u.username\">\r\n            <span class=\"rank\">{{ idx + 1 }}</span>\r\n            <span class=\"name\">{{ u.username }}</span>\r\n            <span class=\"amount\">{{ u.amount }} Á§ºÁâ©ÂÄº</span>\r\n          </li>\r\n        </ol>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Âõ∫ÂÆöÊòæÁ§∫ÁöÑ SC ÂºπÂπïÂå∫ÂüüÔºàÊåÅ‰πÖ 10 ÁßíÔºâ -->\r\n    <div class=\"sc-pinned\" v-if=\"scPinned.length > 0\">\r\n      <div\r\n        class=\"sc-item\"\r\n        v-for=\"p in scPinned\"\r\n        :key=\"p.id\"\r\n        :style=\"bubbleStyle(p)\"\r\n      >\r\n        <div class=\"meta\">\r\n          <span class=\"username\">{{ p.username }}</span>\r\n          <span class=\"sc-badge\">SC</span>\r\n        </div>\r\n        <div class=\"content\">{{ p.content }}</div>\r\n        <div class=\"sc-amount\">¬•{{ p.scAmount }}</div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Ê∂àÊÅØÂàóË°® -->\r\n    <div class=\"messages\" ref=\"messagesList\">\r\n      <div\r\n        v-for=\"msg in messages\"\r\n        :key=\"msg.id\"\r\n        class=\"msg\"\r\n        :class=\"msg.type\"\r\n      >\r\n        <div class=\"avatar\" :style=\"{ background: avatarColor(msg.username) }\">\r\n          {{ avatarInitial(msg.username) }}\r\n        </div>\r\n\r\n        <div class=\"bubble\" :style=\"bubbleStyle(msg)\">\r\n          <div class=\"meta\">\r\n            <span class=\"username\">{{ msg.username }}</span>\r\n\r\n            <span v-if=\"msg.type === 'sc'\" class=\"sc-badge\">SC</span>\r\n            <span v-if=\"msg.type === 'gift'\" class=\"gift-badge\">üéÅ</span>\r\n          </div>\r\n\r\n          <div class=\"content\">{{ msg.content }}</div>\r\n\r\n          <div v-if=\"msg.type === 'sc' && msg.scAmount\" class=\"sc-amount\">\r\n            ¬•{{ msg.scAmount }}\r\n          </div>\r\n        </div>\r\n      </div>\r\n    </div>\r\n\r\n    <!-- SC ÂãæÈÄâÂºÄÂÖ≥ -->\r\n    <div class=\"sc-toggle\">\r\n      <input type=\"checkbox\" v-model=\"sendAsSC\" id=\"scCheck\" />\r\n      <label for=\"scCheck\">Ëä±Ë¥π50ÂèëÈÄÅSCÂºπÂπï</label>\r\n    </div>\r\n\r\n    <!-- ÂèëÈÄÅÂå∫ -->\r\n    <div class=\"send-box\">\r\n      <input\r\n        v-model=\"input\"\r\n        @keydown.enter.prevent=\"onSend\"\r\n        placeholder=\"Êåâ Enter ÂèëÈÄÅ\"\r\n      />\r\n      <button @click=\"onSend\">ÂèëÈÄÅ</button>\r\n    </div>\r\n  </div>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  name: \"LiveChat\",\r\n  props: {\r\n    messages: Array,\r\n    currentUser: Object,\r\n  },\r\n  emits: [\"send-message\", \"send-sc\"],\r\n  data() {\r\n    return {\r\n      input: \"\",\r\n      sendAsSC: false, // ‚úî Êñ∞Â¢ûÔºöÂãæÈÄâ SC ÂºπÂπï\r\n      scPinned: [], // ‚úî Âõ∫ÂÆöÊòæÁ§∫ÁöÑ SC ÂºπÂπï\r\n      fakeOnline: 8523,\r\n\r\n      showLeaderboard: false,\r\n      keepLeaderboard: false,\r\n      leaderboard: [\r\n        { username: \"ÂúüË±™B\", amount: 5200 },\r\n        { username: \"Â§ß‰Ω¨SC\", amount: 3000 },\r\n        { username: \"Â∞èËêåÊñ∞\", amount: 900 },\r\n      ],\r\n    };\r\n  },\r\n\r\n  mounted() {\r\n    this.scrollToBottom();\r\n  },\r\n  watch: {\r\n    messages() {\r\n      this.$nextTick(() => this.scrollToBottom());\r\n    },\r\n    keepLeaderboard(v) {\r\n      if (v) this.showLeaderboard = true;\r\n    },\r\n  },\r\n\r\n  methods: {\r\n    /** ÂèëÈÄÅÊ∂àÊÅØ */\r\n    onSend() {\r\n      const text = this.input.trim();\r\n      if (!text) return;\r\n\r\n      // --------------- SC Ê®°ÂºèÂèëÈÄÅ ------------------\r\n      if (this.sendAsSC) {\r\n        const amount = 50; // ÂèØÂÅöÊàêË°®ÂçïÔºåËøôÈáåÂÜô‰∏Ä‰∏™ÈªòËÆ§ÂÄº\r\n        const msg = {\r\n          username: this.currentUser.username,\r\n          content: text,\r\n          type: \"sc\",\r\n          color: \"#ff9f9f\",\r\n          scAmount: amount,\r\n          id: Date.now(),\r\n        };\r\n\r\n        // ÂèëÈÄÅÁªôÁà∂ÁªÑ‰ª∂\r\n        this.$emit(\"send-sc\", msg);\r\n\r\n        // ‚úî Ê∑ªÂä†Âà∞Âõ∫ÂÆöÂ±ïÁ§∫Âå∫\r\n        this.addPinnedSC(msg);\r\n\r\n        this.input = \"\";\r\n        return;\r\n      }\r\n\r\n      // --------------- ÊôÆÈÄöÂºπÂπï ------------------\r\n      this.$emit(\"send-message\", {\r\n        username: this.currentUser.username,\r\n        content: text,\r\n        type: \"text\",\r\n        color: \"#fff\",\r\n      });\r\n\r\n      this.input = \"\";\r\n    },\r\n\r\n    /** Âõ∫ÂÆö SC ÂºπÂπïÂ±ïÁ§∫ 10 Áßí */\r\n    addPinnedSC(msg) {\r\n      this.scPinned.push(msg);\r\n\r\n      setTimeout(() => {\r\n        this.scPinned = this.scPinned.filter((m) => m.id !== msg.id);\r\n      }, 10000);\r\n    },\r\n\r\n    avatarInitial(name) {\r\n      return name ? name.slice(0, 1).toUpperCase() : \"?\";\r\n    },\r\n    avatarColor(name) {\r\n      const str = name || \"u\";\r\n      let h = 0;\r\n      for (let i = 0; i < str.length; i++) h = (h << 5) - h + str.charCodeAt(i);\r\n      return `hsl(${Math.abs(h) % 360} 70% 55%)`;\r\n    },\r\n\r\n    bubbleStyle(msg) {\r\n      if (msg.type === \"sc\") {\r\n        return {\r\n          background:\r\n            \"linear-gradient(90deg, rgba(255,123,123,0.12), rgba(255,187,123,0.08))\",\r\n          border: \"1px solid rgba(255,123,123,0.25)\",\r\n        };\r\n      }\r\n      if (msg.type === \"gift\") {\r\n        return {\r\n          background: \"rgba(255,209,102,0.06)\",\r\n          border: \"1px solid rgba(255,209,102,0.14)\",\r\n    