      <div class=\"creator-box\">\r\n            <div class=\"avatar\"></div>\r\n\r\n            <div class=\"channel-info\">\r\n              <p class=\"creator-name\">{{ videoInfo.creator }} <span class=\"verified\">‚úî</span></p>\r\n              <p class=\"sub-count\">{{ videoInfo.subs }} ËÆ¢ÈòÖ</p>\r\n            </div>\r\n\r\n            <div class=\"button-area\">\r\n              <button class=\"follow-btn\">ÂÖ≥Ê≥®</button>\r\n              <button class=\"join-btn\">Âä†ÂÖ•ÂúàÂ≠ê</button>\r\n            </div>\r\n          </div>\r\n\r\n          <!-- ‰∫íÂä®ÊåâÈíÆ -->\r\n          <div class=\"action-buttons\">\r\n            <button class=\"act-btn\" @click=\"toggleLike(videoInfo)\">\r\n              üëç {{ videoInfo.likes ?? 0 }}\r\n            </button>\r\n            <button class=\"act-btn\">üîó ÂàÜ‰∫´</button>\r\n          </div>\r\n        </div>\r\n\r\n        <div class=\"stats-row\">\r\n          <span>{{ videoInfo.views }}</span> ¬∑\r\n          <span>{{ videoInfo.duration }}</span>\r\n        </div>\r\n      </div>\r\n\r\n      <!-- ËØÑËÆ∫Âå∫ -->\r\n      <div class=\"comments-section\">\r\n\r\n        <div class=\"comment-input-box\">\r\n          <textarea v-model=\"newComment\" placeholder=\"ÂèëË°®‰Ω†ÁöÑÁúãÊ≥ï‚Ä¶\"></textarea>\r\n          <button @click=\"postComment\">ÂèëË°®ËØÑËÆ∫</button>\r\n        </div>\r\n\r\n        <div class=\"comments-header\">\r\n          <h3>ËØÑËÆ∫</h3>\r\n          <select v-model=\"sortOrder\">\r\n            <option value=\"time\">ÊåâÊó∂Èó¥</option>\r\n            <option value=\"hot\">ÊåâÁÉ≠Â∫¶</option>\r\n          </select>\r\n        </div>\r\n\r\n        <ul class=\"comments-list\">\r\n          <li v-for=\"comment in sortedComments\" :key=\"comment.id\">\r\n            <div class=\"comment-item\">\r\n              <strong>{{ comment.user }}:</strong> {{ comment.content }}\r\n              <div class=\"comment-actions\">\r\n                <span class=\"like-btn\" :class=\"{ liked: comment.liked }\" @click=\"toggleLike(comment)\">\r\n                  ‚ù§Ô∏è {{ comment.likes }}\r\n                </span>\r\n                <span @click=\"toggleReplyBox(comment)\">üí¨ ÂõûÂ§ç</span>\r\n              </div>\r\n              <div v-if=\"replyingTo === comment.id\" class=\"reply-box\">\r\n                <textarea v-model=\"replyText\" placeholder=\"ÂõûÂ§çÂÜÖÂÆπ‚Ä¶\"></textarea>\r\n                <button @click=\"submitReply(comment)\">ÂèëÈÄÅ</button>\r\n              </div>\r\n              <ul class=\"reply-list\" v-if=\"comment.replies.length > 0\">\r\n                <li v-for=\"reply in comment.replies\" :key=\"reply.id\" class=\"reply-item\">\r\n                  <strong>{{ reply.user }}:</strong> {{ reply.content }}\r\n                </li>\r\n              </ul>\r\n            </div>\r\n          </li>\r\n        </ul>\r\n\r\n      </div>\r\n    </div>\r\n\r\n    <!-- Âè≥‰æßÊé®ËçêËßÜÈ¢ëÂå∫ -->\r\n    <aside class=\"right-sidebar\">\r\n      <h3>Êé®ËçêËßÜÈ¢ë</h3>\r\n\r\n      <div class=\"recommend-card\" v-for=\"item in recommendedVideos\" :key=\"item.id\" @click=\"openRecommend(item)\">\r\n        <img class=\"thumb\" :src=\"item.thumbnail\" />\r\n        <div class=\"info\">\r\n          <p class=\"title\">{{ item.title }}</p>\r\n          <small>@{{ item.author }} ¬∑ {{ item.views }} Ê¨°ËßÇÁúã</small>\r\n        </div>\r\n      </div>\r\n    </aside>\r\n\r\n  </div>\r\n</template>\r\n\r\n\r\n\r\n<script setup>\r\nimport { ref, computed, onMounted, onBeforeUnmount } from 'vue'\r\nimport { useRouter, useRoute } from 'vue-router'\r\n\r\nconst router = useRouter()\r\nconst route = useRoute()\r\n\r\n// ËßÜÈ¢ëÊ∫êÂú∞ÂùÄ\r\nconst videoSrc = ref('https://www.w3schools.com/html/mov_bbb.mp4')\r\n// ËßÜÈ¢ë‰ø°ÊÅØ\r\nconst videoInfo = ref(null)\r\n// ÈáäÊîæ blob ËÆ∞ÂΩï\r\nlet blobUrl = null\r\n\r\n// ËØÑËÆ∫Êï∞ÊçÆÁ§∫‰æã\r\nconst comments = ref([\r\n  { id: 1, user: 'Alice', content: 'Â§™Ê£í‰∫ÜÔºÅ', time: '2025-11-23T17:00:00', hot: 10 },\r\n  { id: 2, user: 'Bob', content: 'ÈùûÂ∏∏ÂñúÊ¨¢ÔºÅ', time: '2025-11-23T17:05:00', hot: 15 },\r\n  { id: 3, user: 'Charlie', content: 'Â≠¶‰π†‰∫Ü', time: '2025-11-23T17:10:00', hot: 8 }\r\n])\r\n\r\n// ËØÑËÆ∫Â¢ûÂº∫\r\ncomments.value = comments.value.map(c => ({\r\n  ...c,\r\n  likes: c.hot || 0,\r\n  liked: false,\r\n  replies: []\r\n}))\r\n\r\n// ÈÄâÊã©ÊéíÂ∫èÊñπÂºè\r\nconst sortOrder = ref('time')\r\n\r\nconst sortedComments = computed(() => {\r\n  return [...comments.value].sort((a, b) => {\r\n    if (sortOrder.value === 'time') {\r\n      return new Date(b.time) - new Date(a.time)\r\n    } else if (sortOrder.value === 'hot') {\r\n      return b.hot - a.hot\r\n    }\r\n    return 0\r\n  })\r\n})\r\n\r\n// ÁÇπËµûÂäüËÉΩÔºàËßÜÈ¢ëÊàñËØÑËÆ∫ÈÄöÁî®Ôºâ\r\nconst toggleLike = (item) => {\r\n  if (!item.liked) {\r\n    item.likes++\r\n    item.liked = true\r\n  } else {\r\n    item.likes--\r\n    item.liked = false\r\n  }\r\n}\r\n\r\n// ÂèëÂ∏ÉËØÑËÆ∫\r\nconst newComment = ref(\"\")\r\nconst replyingTo = ref(null)\r\nconst replyText = ref(\"\")\r\n\r\nconst postComment = () => {\r\n  if (!newComment.value.trim()) return\r\n\r\n  comments.value.unshift({\r\n    id: Date.now(),\r\n    user: \"You\",\r\n    content: newComment.value,\r\n    time: new Date().toISOString(),\r\n    likes: 0,\r\n    replies: []\r\n  })\r\n\r\n  newComment.value = \"\"\r\n}\r\n\r\n// ÂõûÂ§çÊ°ÜÂºÄÂÖ≥\r\nconst toggleReplyBox = (comment) => {\r\n  if (replyingTo.value === comment.id) {\r\n    replyingTo.value = null\r\n  } else {\r\n    replyingTo.value = comment.id\r\n    replyText.value = \"\"\r\n  }\r\n}\r\n\r\n// ÂõûÂ§çÊèê‰∫§\r\nconst submitReply = (comment) => {\r\n  if (!replyText.value.trim()) return\r\n\r\n  comment.replies.push({\r\n    id: Date.now(),\r\n    user: \"You\",\r\n    content: replyText.value,\r\n    time: new Date().toISOString()\r\n  })\r\n\r\n  replyText.value = \"\"\r\n  replyingTo.value = null\r\n}\r\n\r\n\r\n// ========= Êé®ËçêËßÜÈ¢ëÂÅáÊï∞ÊçÆ (ÂèØÊõøÊç¢ÁúüÂÆû API) =========\r\n\r\nconst recommendedVideos = ref([\r\n  {\r\n    id: 101,\r\n    title: \"ÁàÜÊ¨æÈü≥‰πê MV\",\r\n    author: \"VirtuaLive\",\r\n    views: \"12‰∏á\",\r\n    thumbnail: \"https://picsum.photos/200/120?1\"\r\n  },\r\n  {\r\n    id: 102,\r\n    title: \"Âπ¥Â∫¶ËàûËπàÁ≤æÈÄâ\",\r\n    author: \"ËàûËπàÁ§æ\",\r\n    views: \"8.4‰∏á\",\r\n    thumbnail: \"https://picsum.photos/200/120?2\"\r\n  },\r\n  {\r\n    id: 103,\r\n    title: \"ÊêûÁ¨ëÁû¨Èó¥ÂêàÈõÜ\",\r\n    author: \"FunnyLab\",\r\n    views: \"34‰∏á\",\r\n    thumbnail: \"https://picsum.photos/200/120?3\"\r\n  },\r\n  {\r\n    id: 104,\r\n    title: \"Vlog ÊóÖË°åÂéªÂï¶\",\r\n    author: \"ÊóÖÊãçÂ∞èÁôΩ\",\r\n    views: \"19‰∏á\",\r\n    thumbnail: \"https://picsum.photos/200/120?4\"\r\n  },\r\n  {\r\n    id: 105,\r\n    title: \"ÊäÄÊúØÊïôÁ®ãÔºöVue3\",\r\n    author: \"‰ª£Á†ÅÂ∑•Âùä\",\r\n    views: \"3.3‰∏á\",\r\n    thumbnail: \"https://picsum.photos/200/120?5\"\r\n  }\r\n])\r\n\r\n// ÁÇπÂáªÊé®ËçêËßÜÈ¢ë -> Ë∑≥ËΩ¨Êí≠Êîæ\r\nconst openRecommend = (item) => {\r\n  router.push({\r\n    path: \"/video\",\r\n    query: { id: item.id, src: videoSrc.value }\r\n  })\r\n}\r\n\r\n\r\n// Ëá™Âä®Âä†ËΩΩËßÜÈ¢ë(‰øùÁïô‰Ω†ÂéüÈÄªËæë)\r\nconst loadVideo = () => {\r\n  const videoSrc_query = route.query.src\r\n  if (videoSrc_query) {\r\n    videoSrc.value = videoSrc_query\r\n    const videoId = route.query.id\r\n    if (videoId) {\r\n      videoInfo.value = {\r\n        id: videoId,\r\n        title: `ËßÜÈ¢ë ${videoId}`,\r\n        creator: 'VirtuaLive',\r\n        views: 'ÁÇπÂáªÊí≠Êîæ',\r\n        duration: 'Âä®ÊÄÅÂä†ËΩΩ'\r\n      }\r\n    }\r\n    return\r\n  }\r\n\r\n  const videoId = route.query.id\r\n  if (videoId) {\r\n    try {\r\n      const userWorks = localStorage.getItem('userWorks')\r\n      if (userWorks) {\r\n        const works = JSON.parse(userWorks)\r\n        const video = works.find(w => w.id === Number(videoId))\r\n\r\n        if (video) {\r\n          videoInfo.value = video\r\n\r\n          const blobUrl = sessionStorage.getItem(`videoBlob_${videoId}`