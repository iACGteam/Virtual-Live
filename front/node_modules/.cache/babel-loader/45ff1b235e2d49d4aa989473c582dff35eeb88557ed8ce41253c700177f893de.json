         <span v-if=\"joined\">Â∑≤Âä†ÂÖ• ‚úì</span>\r\n          <span v-else>Âä†ÂÖ•</span>\r\n        </el-button>\r\n\r\n        <el-button class=\"sign-btn\" :class=\"{ signed: signed }\r\n          \" :disabled=\"!joined || signed\" @click=\"handleSign\">\r\n          <template v-if=\"!joined\">Âä†ÂÖ•Âπ∂Á≠æÂà∞</template>\r\n          <template v-else-if=\"!signed\">ÁÇπÂáªÁ≠æÂà∞</template>\r\n          <template v-else>‰ªäÊó•Â∑≤Á≠æÂà∞ ‚úî</template>\r\n        </el-button>\r\n\r\n      </div>\r\n    </header>\r\n\r\n    <transition name=\"fade-slide\">\r\n      <div v-if=\"toast.show\" class=\"toast\">{{ toast.msg }}</div>\r\n    </transition>\r\n\r\n    <div class=\"nav-tabs\">\r\n      <div v-for=\"item in navList\" :key=\"item\" :class=\"['tab-item', activeTab === item ? 'active' : '']\"\r\n        @click=\"activeTab = item\">\r\n        {{ item }}\r\n      </div>\r\n    </div>\r\n\r\n    <div class=\"content-list\">\r\n      <div v-for=\"card in filteredCards\" :key=\"card.id\" class=\"card\" :class=\"{ highlight: card.highlight }\">\r\n\r\n        <!-- Âç°ÁâáÂÜÖÂÆπ -->\r\n        <div class=\"card-header\">\r\n          <div class=\"card-left\">\r\n            <p class=\"title\">{{ card.title }}</p>\r\n            <p class=\"excerpt\">{{ card.excerpt }}</p>\r\n            <div class=\"card-images\" v-if=\"card.images && card.images.length\">\r\n              <img v-for=\"(img, index) in card.images\" :key=\"index\" :src=\"img\" class=\"post-image\" />\r\n            </div>\r\n\r\n          </div>\r\n          <img :src=\"card.avatar\" class=\"card-avatar\" />\r\n        </div>\r\n\r\n        <!-- Â∫ïÈÉ®ÊåâÈíÆ -->\r\n        <footer class=\"card-footer\">\r\n          <div class=\"comments\" @click=\"toggleComments(card.id)\">\r\n            üí¨ Êü•Áúã {{ card.comments.length }} Êù°ËØÑËÆ∫\r\n          </div>\r\n          <div class=\"reply\" @click=\"startReply(card.id, null)\">‚Ü© ÂõûÂ§ç</div>\r\n          <div class=\"like\" @click=\"toggleLike(card)\">\r\n            <span :class=\"['heart', card.liked ? 'liked' : '']\">‚ù§</span>\r\n            <span class=\"likes-num\">{{ card.likes }}</span>\r\n          </div>\r\n        </footer>\r\n\r\n        <!-- ËØÑËÆ∫Âå∫ÔºàÂèØÂ±ïÂºÄÔºâ -->\r\n        <transition name=\"expand\">\r\n          <div class=\"comment-box\" v-if=\"card.showComments\">\r\n            <!-- ÂèëÂ∏ÉËØÑËÆ∫ -->\r\n            <div class=\"comment-input\">\r\n              <input type=\"text\" v-model=\"card.newComment\"\r\n                :placeholder=\"card.replyTo ? 'ÂõûÂ§çÔºö' + card.replyTo : 'ÂèëË°®‰Ω†ÁöÑËØÑËÆ∫...'\"\r\n                @keyup.enter=\"submitComment(card.id)\" />\r\n              <button @click=\"submitComment(card.id)\">ÂèëË°®</button>\r\n            </div>\r\n\r\n\r\n            <div class=\"comments-list\">\r\n              <div class=\"comment-item\" v-for=\"(c, index) in card.comments\" :key=\"index\">\r\n\r\n                <img :src=\"c.avatar\" class=\"comment-avatar\" />\r\n\r\n                <div class=\"comment-main\">\r\n                  <div class=\"comment-user\">{{ c.user }}</div>\r\n                  <div class=\"comment-content\">{{ c.text }}</div>\r\n\r\n                  <div class=\"comment-actions\">\r\n                    <span class=\"comment-time\">{{ c.time }}</span>\r\n                    <span class=\"reply-btn\" @click=\"startReply(card.id, c.user)\">ÂõûÂ§ç</span>\r\n                  </div>\r\n                </div>\r\n\r\n              </div>\r\n            </div>\r\n          </div>\r\n        </transition>\r\n\r\n      </div>\r\n    </div>\r\n  </div>\r\n\r\n  <!-- Âõ∫ÂÆöÂèëÂ∏ÉÊåâÈíÆ -->\r\n  <button class=\"post-btn\" @click=\"showPostBox = true\">\r\n    Ôºã\r\n  </button>\r\n\r\n  <!-- ÂèëÂ∏ÉÊ≥°Ê≥°Ê°Ü -->\r\n  <transition name=\"fade-slide\">\r\n    <div v-if=\"showPostBox\" class=\"post-bubble\">\r\n      <h3 class=\"post-title\">ÂèëÂ∏ÉÊñ∞Â∏ñÂ≠ê</h3>\r\n\r\n      <input v-model=\"newPost.title\" placeholder=\"ËæìÂÖ•Ê†áÈ¢ò\" class=\"post-input\" />\r\n\r\n      <textarea v-model=\"newPost.content\" placeholder=\"ÂÜôÁÇπ‰ªÄ‰πàÂêß...\" class=\"post-textarea\"></textarea>\r\n\r\n      <!-- ÂõæÁâá‰∏ä‰º† -->\r\n      <div class=\"post-upload\">\r\n        <label class=\"upload-btn\">\r\n          üì∑ ‰∏ä‰º†ÂõæÁâá\r\n          <input type=\"file\" accept=\"image/*\" multiple @change=\"handleImageUpload\" />\r\n        </label>\r\n\r\n        <div class=\"preview-box\">\r\n          <img v-for=\"(img, index) in newPost.images\" :key=\"index\" :src=\"img\" class=\"preview-img\"\r\n            @click=\"removeImage(index)\" />\r\n        </div>\r\n      </div>\r\n\r\n\r\n      <div class=\"post-actions\">\r\n        <button class=\"cancel\" @click=\"showPostBox = false\">ÂèñÊ∂à</button>\r\n        <button class=\"publish\" @click=\"publishPost\">ÂèëÂ∏É</button>\r\n      </div>\r\n    </div>\r\n  </transition>\r\n</template>\r\n\r\n<script>\r\nexport default {\r\n  data() {\r\n    return {\r\n      defaultAvatar: require(\"@/assets/avatar.jpg\"),\r\n      followed: false,\r\n      showPostBox: false,\r\n      newPost: {\r\n        title: \"\",\r\n        content: \"\",\r\n        images: []\r\n      },\r\n      com: {\r\n        id: 1,\r\n        name: \"ÂÆòÊñπÁ§æÂõ¢\",\r\n        count: 23000,\r\n        days: 5\r\n      },\r\n      cards: [\r\n        {\r\n          id: 1,\r\n          title: \"ÂìàÂìàÂìà\",\r\n          excerpt: 'ÂèàÊòØËß£Á¶ÅÁöÑ‰∏ÄÂº†ü•πÊòØÊî∂ËóèÈõÜÁöÑÈòøËê®AzaÔºå‰πüÊòØÂ∏¶Ëñ™Áîª‰∏ä‰∫Ü ‚Äã„ÄÇ',\r\n          avatar: require('@/assets/community/aza2.jpg'),\r\n          likes: 0,\r\n          liked: false,\r\n          showComments: false,\r\n          newComment: \"\",\r\n          replyTo: null,\r\n          highlight: false,\r\n          comments: [\r\n            {\r\n              user: \"Áî®Êà∑A\",\r\n              text: \"ÂÜôÂæó‰∏çÈîôÔºÅ\",\r\n              avatar: require('@/assets/avatar.jpg'),\r\n              time: \"2Â∞èÊó∂Ââç\"\r\n            },\r\n            {\r\n              user: \"Áî®Êà∑B\",\r\n              text: \"ÂæàÊúâÂ∏ÆÂä©ÔºÅ\",\r\n              avatar: require('@/assets/avatar.jpg'),\r\n              time: \"1Â§©Ââç\"\r\n            }\r\n          ],\r\n          images: [require('@/assets/community/aza2.jpg'),],\r\n        },\r\n        {\r\n          id: 2,\r\n          title: \"ùóõùóÆùóΩùóΩùòÜ ùü≤ùòÅùóµ ùóîùóªùóªùó∂ùòÉùó≤ùóøùòÄùóÆùóøùòÜ! ‚Äã\",\r\n          excerpt: '',\r\n          avatar: require('@/assets/avatar.jpg'),\r\n          likes: 3,\r\n          liked: true,\r\n          showComments: false,\r\n          newComment: \"\",\r\n          replyTo: null,\r\n          highlight: false,\r\n          comments: [],\r\n          images: [require('@/assets/community/aza4.jpg')],\r\n        }\r\n      ],\r\n      joined: false,\r\n      signed: false,\r\n      toast: {\r\n        show: false,\r\n        msg: ''\r\n      },\r\n      navList: ['ÊúÄÊñ∞', 'ÊúÄÁÉ≠'],\r\n      activeTab: 'ÊúÄÊñ∞',\r\n\r\n    }\r\n  },\r\n  methods: {\r\n    toggleJoin() {\r\n      this.joined = !this.joined;\r\n      if (this.joined && !this.signed) {\r\n        // Optionally keep signed false until user explicitly signs\r\n      }\r\n    },\r\n    handleSign() {\r\n      if (!this.joined) {\r\n        // Ëá™Âä®Âä†ÂÖ•Âπ∂Á≠æÂà∞\r\n        this.joined = true;\r\n      }\r\n\r\n      if (this.signed) {\r\n        this.showToast('‰Ω†‰ªäÂ§©Â∑≤ÁªèÁ≠æÂà∞Ëøá‰∫Ü');\r\n        return;\r\n      }\r\n\r\n      // ÊâßË°åÁ≠æÂà∞ÈÄªËæë\r\n      this.signed = true;\r\n      this.com.days += 1;\r\n      // ÁªôÁ¨¨‰∏Ä‰∏™Âç°Áâá‰∏Ä‰∏™ÁÆÄÁü≠È´ò‰∫ÆÂèçÈ¶à\r\n      this.cards[0].highlight = true;\r\n      setTimeout(() => (this.cards[0].highlight = false), 800);\r\n\r\n      this.showToast('Á≠æÂà∞ÊàêÂäüÔºÅËøûÁª≠Á≠æÂà∞+' + 1);\r\n    },\r\n    showToast(msg = '', ms = 1200) {\r\n      this.toast.msg = msg;\r\n      this.toast.show = true;\r\n      setTimeout(() => (this.toast.show = false), ms);\r\n    },\r\n    toggleComments(id) {\r\n      this.cards = this.cards.map(card =>\r\n        card.id === id ? { ...card, showComments: !card.showComments } : card\r\n      );\r\n    },\r\n    toggleLike(card) {\r\n      // Â∞èÂä®ÁîªÔºöÂÖàÂàáÊç¢ likedÔºåÂÜçË∞ÉÊï¥Êï∞Â≠ó\r\n      card.liked = !card.liked;\r\n      card.likes += card.liked ? 1 : -1;\r\n      // Ëß¶Âèë highlight Âä®Áîª\r\n      card.highlight = true;\r\n      setTimeout(() => (card.highlight = false), 400);\r\n    },\r\n    startReply(cardId, user) {\r\n      const card = this.cards.find(c => c.id === cardId);\r\n      card.replyTo = user; // null Ë°®Á§∫‰∏çÊòØÂõûÂ§ç\r\n      card.showComments = true; // Ëá™Âä®Â±ïÂºÄËØÑËÆ∫Âå∫\r\n      // Â∞ÜÁÑ¶ÁÇπÊîæÂà∞ËæìÂÖ•Ê°ÜÔºà‰∏ã‰∏ÄÊ¨°ÂèØ‰ª•Áî® $nextTick Ëé∑ÂèñÂÖÉÁ¥†Âπ∂ focusÔºâ\r\n    },\r\n    submitComment(cardId) {\r\n      const card = this.cards.find(c => c.id === cardId);\r\n      if (!card.newComment || !card.newComment.trim()) return;\r\n\r\n      const text = card.replyTo ? `ÂõûÂ§ç ${card.replyTo}Ôºö${card.newComment}` : card.newComment;\r\n\r\n      card.comments.push({\r\n        user: \"Êàë\",\r\n        text,\r\n        avatar: require('@/assets/avatar.jpg'),\r\n        time: 'ÂàöÂàö'\r\n      });\r\n\r\n      // Ê∏ÖÁ©∫ËæìÂÖ•\r\n      card.newComment = \"\";\r\n      card.replyTo = null;\r\n\r\n      this.showToast('ËØÑËÆ∫Â∑≤ÂèëÂ∏É', 900);\r\n    },\r\n    goBack() {\r\n      if (window.history.length > 1) {\r\n        this.$router.go(-1);\r\n      } else {\r\n        this.$router.push({ path: '/' });\r\n      }\r\n    },\r\n    toggleFollow() {\r\n      this.followed = !this.followed;\r\n      // this.showToast(this.followed ? \"Â∑≤ÂÖ≥Ê≥®ËØ•Âçö‰∏ª\" : \"Â∑≤ÂèñÊ∂àÂÖ≥Ê≥®\");\r\n    },\r\n\r\n    publishPost() {\r\n      if (!this.newPost.title.trim()) {\r\n        this.showToast(\"Ê†áÈ¢ò‰∏çËÉΩ‰∏∫Á©∫\");\r\n        return;\r\n      }\r\n\r\n      const newCard = {\r\n        id: Date.now(),\r\n        title: this.newPost.title,\r\n        excerpt: this.newPost.content.substring(0, 30),\r\n        avatar: require('@/assets/avatar.jpg'),\r\n        likes: 0,\r\n        liked: false,\r\n        showComments: false,\r\n        newComment: \"\",\r\n        replyTo: null,\r\n        highlight: true,\r\n        comments: [],\r\n        images: [...this.newPost.images]\r\n      };\r\n\r\n      this.cards.unshift(newCard);\r\n\r\n      // Ê∏ÖÁ©∫ËæìÂÖ•Ê°Ü\r\n      this.newPost.title = \"\";\r\n      this.newPost.content = \"\";\r\n      this.newPost.images = [];\r\n\r\n      this.showPostBox = false;\r\n\r\n      this.showToast(\"ÂèëÂ∏ÉÊàêÂäü\");\r\n\r\n      setTimeout(() => (newCard.highlight = false), 800);\r\n    }\r\n    ,\r\n    handleImageUpload(e) {\r\n      const files = Array.from(e.target.files);\r\n\r\n      if (this.newPost.images.length + files.length > 2) {\r\n        this.showToast(\"ÊúÄÂ§öÂè™ËÉΩÈÄâÊã© 2 Âº†ÂõæÁâá\");\r\n        return;\r\n      }\r\n\r\n      files.forEach(file => {\r\n        const reader = new FileReader();\r\n        reader.onload = (event) => {\r\n          this.newPost.images.push(event.target.result);\r\n        };\r\n        reader.readAsDataURL(file);\r\n      });\r\n\r\n      // Ê∏ÖÁ©∫ inputÔºåÂê¶ÂàôÊó†Ê≥ïÈáçÂ§çÈÄâÊã©Âêå‰∏ÄÂº†ÂõæÁâá\r\n      e.target.value = null;\r\n    },\r\n\r\n    removeImage(index) {\r\n      this.newPost.images.splice(index, 1);\r\n    }\r\n\r\n\r\n  },\r\n  computed: {\r\n    filteredCards() {\r\n      // ËøîÂõûÊñ∞ÁöÑÊï∞ÁªÑÂâØÊú¨ÔºåÈÅøÂÖç sort ÊîπÂèòÂéüÊï∞ÁªÑÈ°∫Â∫è\r\n      const list = this.cards.slice();\r\n      if (this.activeTab === 'ÊúÄÊñ∞') {\r\n        // ÂÅáËÆæÂç°ÁâáÊ≤°ÊúâÊó∂Èó¥Â≠óÊÆµÔºåÁî® id ÂÄíÂ∫è‰ª£Ë°®ÊúÄÊñ∞\r\n        return list.sort((a, b) => b.id - a.id);\r\n      }\r\n      if (this.activeTab === 'ÊúÄÁÉ≠') {\r\n        return list.sort((a, b) => b.likes - a.likes);\r\n      }\r\n      return list;\r\n    },\r\n    comName() {\r\n      return this.$route.query.name\r\n    },\r\n    comAvatar() {\r\n      return this.$route.query.avatar\r\n    }\r\n  },\r\n  mounted() {\r\n    const q = this.$route.query;\r\n\r\